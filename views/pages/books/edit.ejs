<main>
    <form action="/updateBook/<%=book.id%>?_method=put" method="POST">
      <input type="text" name="url" value="<%=book.url%>">
      <input type="text" name="title" value="<%=book.title%>">    
      <input type="text" name="author" value="<%=book.author%>">  
      <textarea name="description" cols="25" rows="10">"><%=book.description%></textarea>
      
      <button type="submit">Update Book</button>
    </form>
</main>